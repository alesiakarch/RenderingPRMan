# red.rib
Display "red.tiff" "it" "rgba"
Projection "perspective"

WorldBegin
    # move everything back 2 units
    Translate 0 0 2
    Bxdf "PxrDiffuse" "diffuse" "color diffuseColor" [1 0 0]
    # Color [ 1 0 0 ] seems to be depricated

    TransformBegin
        Translate -1 0 0
        Sphere 1 -1 1 360
    TransformEnd

    TransformBegin
        Translate 1 0 0
        Sphere 1 -1 1 360
    TransformEnd
WorldEnd 