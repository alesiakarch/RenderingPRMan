shader face_disp (
    string tex_base_path = "",   // e.g. "textures/numbers"
    float scale = 0.05,          // displacement amount
    output float resultF = 0.0
)
{
    int fid = 1;
    getattribute("patch:faceindex", fid);

    string tex_path = concat(tex_base_path, "/number_", format("%d", fid), ".tx");

    resultF = texture(tex_path, u, v) * scale;
}