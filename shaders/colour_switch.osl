shader colour_switch(
    color ColourA = color(0.0, 0.0, 0.0),
    color ColourB = color(0.0, 0.0, 0.0),
    float mask = 0.0,
    output color Cout = 0

)
{   
    //float clamped_mask = clamp(mask, 0, 1);
    Cout = mix(ColourA, ColourB, mask);
}

